<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/ff.padding.large"
    android:paddingRight="@dimen/ff.padding.large"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <TextView
            android:id="@+id/tv_dayline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_toLeftOf="@+id/iv_sound_dayline"
            android:layout_toStartOf="@+id/iv_sound_dayline"
            tools:text="Even miracles take a little time. —The Fairy Godmother"
            android:textColor="@color/ff.white"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_sound_dayline"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_volume_up_white_24dp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_dayline_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:textColor="@color/ff.white"
        tools:text="就算是奇迹也要花点时间才能发生的。 —仙女教母"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


</LinearLayout>