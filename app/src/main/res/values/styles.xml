<resources>

    <!-- Base application theme. -->
    <!--@style/Theme.AppCompat-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/normalTextAppearance</item>
        <item name="android:windowBackground">@color/bg_app</item>
    </style>
    <style name="NoDisplay" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">true</item>
    </style>

    <style name="myTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="normalTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.About" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/black</item>

        <!--optional-->
        <!--<item name="aboutPageHeaderBackground">reference|color</item>-->
        <!--<item name="aboutPageHeaderContentScrim">reference|color</item>-->
        <!--<item name="aboutPageHeaderTextColor">color</item>-->
        <!--<item name="aboutPageNavigationIcon">reference</item>-->
    </style>

</resources>
